      <li><a href="/estatisticas">ğŸ“Š EstatÃ­sticas</a></li>
      <li><a href="/clientes" class="active">ğŸ‘¤ Clientes</a></li>
      <li><a href="/relatorios/auditoria">ğŸ§¾ Auditoria</a></li>
      <li><a href="/logout">ğŸšª Sair</a></li>
    </ul>
  </div>

  <div class="content">
    <header><h1>ğŸ“‹ Lista de Clientes</h1></header>

    <div class="text-center">
      <a href="/clientes/novo" class="btn btn-success">+ Novo Cliente</a>
    </div>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>CPF/CNPJ</th>
          <th>Email</th>
          <th>Telefone</th>
          <th>EndereÃ§o</th>
          <th>Status</th>
          <th>AÃ§Ãµes</th>
        </tr>
      </thead>
      <tbody>
        <% if (!clientes || clientes.length === 0) { %>
          <tr><td colspan="8" class="text-center">Nenhum cliente cadastrado.</td></tr>
        <% } else { %>
          <% clientes.forEach(c => { %>
            <tr class="<%= c.Ativo === 0 ? 'inativo' : '' %>">
              <td><%= c.ClienteID %></td>
              <td>
                <%= c.Nome %>
                <% if (c.Ativo === 0) { %>
                  <span class="status-inativo">(Inativo)</span>
                <% } %>
              </td>
              <td><%= c.CPF_CNPJ %></td>
              <td><%= c.Email || '-' %></td>
              <td><%= c.Telefone || '-' %></td>
              <td><%= c.Endereco || '-' %></td>
              <td><%= c.Ativo === 1 ? 'Ativo' : 'Inativo' %></td>
              <td class="acoes">
                <a href="/clientes/editar/<%= c.ClienteID %>" class="btn btn-primary">Editar</a>

                <% if (c.Ativo === 1) { %>
                  <form action="/clientes/inativar/<%= c.ClienteID %>" method="POST" class="inline-form">
                    <button type="submit" class="btn btn-warning" onclick="return confirm('Deseja inativar este cliente?')">Inativar</button>
                  </form>
                <% } else { %>
                  <form action="/clientes/ativar/<%= c.ClienteID %>" method="POST" class="inline-form">
                    <button type="submit" class="btn btn-success">Ativar</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
