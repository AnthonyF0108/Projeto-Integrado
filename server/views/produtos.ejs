<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Produtos - Agrovale</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- ===== Sidebar ===== -->
  <div class="sidebar">
    <h2>Agrovale</h2>
    <ul>
      <li><a href="/dashboard">ğŸ  InÃ­cio</a></li>
      <li><a href="/produtos">ğŸ“¦ Produtos</a></li>
      <li><a href="/vendas">ğŸ’° Vendas</a></li>
      <li><a href="/estatisticas">ğŸ“Š EstatÃ­sticas</a></li>
      <li><a href="/clientes">ğŸ‘¤ Clientes</a></li>
      <li><a href="/relatorios/auditoria">ğŸ§¾ Auditoria</a></li>
      <li><a href="/logout">ğŸšª Sair</a></li>
    </ul>
  </div>

  <!-- ===== ConteÃºdo principal ===== -->
  <div class="content">
    <header><h1>ğŸ“¦ Lista de Produtos</h1></header>

    <!-- BotÃ£o de novo produto -->
    <div class="text-center">
      <a href="/produtos/criar" class="btn btn-success">+ Novo Produto</a>
    </div>

    <!-- ===== Tabela de produtos ===== -->
    <table>
      <thead>
        <tr>
          <th>CÃ³digo</th>
          <th>Nome</th>
          <th>Categoria</th>
          <th>PreÃ§o de Venda</th>
          <th>Estoque Atual</th>
          <th>AÃ§Ãµes</th>
        </tr>
      </thead>
      <tbody>
        <% if (!produtos || produtos.length === 0) { %>
          <tr>
            <td colspan="6" class="text-center">Nenhum produto cadastrado.</td>
          </tr>
        <% } else { %>
          <% produtos.forEach(p => { %>
            <tr class="<%= p.Ativo === 0 ? 'inativo' : '' %>">
              <!-- CÃ³digo -->
              <td><%= (p.Codigo || p.ProdutoID).toString().padStart(5, '0') %></td>

              <!-- Nome -->
              <td>
                <%= p.Nome %>
                <% if (p.Ativo === 0) { %>
                  <span class="status-inativo">(Inativo)</span>
                <% } %>
              </td>

              <!-- Categoria -->
              <td><%= p.Categoria || '-' %></td>

              <!-- PreÃ§o -->
              <td>R$ <%= p.PrecoVenda ? p.PrecoVenda.toFixed(2) : '0.00' %></td>

              <!-- Estoque -->
              <td><%= p.EstoqueAtual || 0 %></td>

              <!-- AÃ§Ãµes -->
              <td class="acoes">
                <a href="/produtos/editar/<%= p.ProdutoID %>" class="btn btn-primary">Editar</a>

                <% if (p.Ativo === 1) { %>
                  <form action="/produtos/inativar/<%= p.ProdutoID %>" method="POST" class="inline-form">
                    <button type="submit" class="btn btn-warning" onclick="return confirm('Deseja inativar este produto?')">
                      Inativar
                    </button>
                  </form>
                <% } else { %>
                  <form action="/produtos/ativar/<%= p.ProdutoID %>" method="POST" class="inline-form">
                    <button type="submit" class="btn btn-success">
                      Ativar
                    </button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
