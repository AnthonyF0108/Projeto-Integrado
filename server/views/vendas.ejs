<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Nova Venda - Agrovale</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 0; background: #f5f6fa; display: flex; }

    /* Sidebar */
    .sidebar {
      width: 220px;
      background: #007bff;
      color: white;
      height: 100vh;
      position: fixed;
      top: 0; left: 0;
      padding-top: 1rem;
    }
    .sidebar h2 { text-align: center; margin-bottom: 2rem; }
    .sidebar a {
      display: block;
      padding: 0.8rem 1rem;
      color: white;
      text-decoration: none;
      font-weight: bold;
    }
    .sidebar a:hover { background: #0056b3; }

    /* Conteúdo */
    .content { margin-left: 220px; padding: 2rem; width: calc(100% - 220px); }
    h1 { margin-bottom: 1rem; }

    /* Formulário */
    .venda-form {
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      max-width: 900px;
      margin: auto;
    }
    .form-group { margin-bottom: 1rem; }
    label { display: block; margin-bottom: 0.5rem; font-weight: bold; }
    input, select, textarea {
      width: 100%; padding: 0.75rem; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;
    }

    /* Botões */
    .btn { padding: 8px 14px; border-radius: 5px; cursor: pointer; border: none; font-size: 1rem; }
    .btn-success { background: #28a745; color: white; }
    .btn-success:hover { background: #218838; }
    .btn-secondary { background: #6c757d; color: white; }
    .btn-secondary:hover { background: #5a6268; }
    .btn-remove { background: #dc3545; color: white; }
    .btn-remove:hover { background: #c82333; }

    /* Itens */
    .item-row { display: flex; gap: 10px; align-items: flex-end; margin-top: 10px; }
    .item-row .form-group { flex-grow: 1; }
    .item-header { display: flex; gap: 10px; font-weight: bold; margin-bottom: 5px; }
    .item-header > div { flex-grow: 1; }
    .item-header > div:nth-child(2) { width: 100px; }
    .item-header > div:nth-child(3), .item-header > div:nth-child(4) { width: 120px; }
    .item-header > div:nth-child(5) { width: 80px; }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <h2>Agrovale</h2>
    <a href="/dashboard">🏠 Início</a>
    <a href="/produtos">📦 Consulta de Produto</a>
    <a href="/vendas">💰 Vendas</a>
    <a href="/estatisticas">📊 Estatísticas</a>
    <a href="/clientes">👤 Clientes</a>
    <a href="/logout">🚪 Sair</a>
  </div>

  <!-- Conteúdo -->
  <div class="content">
    <h1>Nova Venda</h1>
    <div class="venda-form">
      <form action="/vendas/criar" method="POST">
        
        <!-- Cliente -->
        <div class="form-group">
          <label for="cliente">Cliente:</label>
          <select id="cliente" name="clienteId" required>
            <option value="">Selecione um cliente</option>
            <% clientes.forEach(cliente => { %>
              <option value="<%= cliente.ClienteID %>"><%= cliente.Nome %> (<%= cliente.CPF_CNPJ || 'N/A' %>)</option>
            <% }); %>
          </select>
        </div>

        <!-- Forma de Pagamento -->
        <div class="form-group">
          <label for="forma_pagamento">Forma de Pagamento:</label>
          <select id="forma_pagamento" name="formaPagamentoId" required>
            <option value="">Selecione a forma de pagamento</option>
            <% formasPagamento.forEach(fp => { %>
              <option value="<%= fp.PagamentoID %>"><%= fp.Nome %></option>
            <% }); %>
          </select>
        </div>

        <!-- Itens -->
        <h3>Itens da Venda</h3>
        <div class="item-header">
          <div>Produto</div>
          <div>Qtd</div>
          <div>Unitário</div>
          <div>Total</div>
          <div></div>
        </div>
        <div id="itens-container">
          <div class="item-row">
            <div class="form-group">
              <select name="produtos[]" class="produto-select" onchange="updateFields(this, 0)" required>
                <option value="">Selecione um produto</option>
                <% produtos.forEach(produto => { %>
                  <option value="<%= produto.ProdutoID %>" data-preco="<%= parseFloat(produto.PrecoVenda) %>" data-unidade="<%= produto.UnidadeMedida %>">
                    <%= produto.Nome %> (R$ <%= parseFloat(produto.PrecoVenda).toFixed(2) %>)
                  </option>
                <% }); %>
              </select>
            </div>
            <div class="form-group" style="width: 100px;">
              <input type="number" name="quantidades[]" id="quantidade-0" step="1" value="1" oninput="updateTotal(0)" required>
            </div>
            <div class="form-group" style="width: 120px;">
              <input type="text" name="valores_unitarios[]" id="valor-unitario-0" readonly>
            </div>
            <div class="form-group" style="width: 120px;">
              <input type="text" name="valores_totais[]" id="valor-total-0" readonly>
            </div>
            <button type="button" class="btn btn-remove" onclick="removeItem(this)">Remover</button>
          </div>
        </div>
        <button type="button" class="btn btn-secondary" id="add-item">Adicionar Item</button>

        <!-- Resumo -->
        <h3 style="margin-top: 20px;">Resumo da Venda</h3>
        <div class="form-group">
          <label for="valor_bruto">Valor Bruto:</label>
          <input type="text" id="valor_bruto" name="valor_bruto" readonly>
        </div>
        <div class="form-group">
          <label for="desconto">Desconto (%):</label>
          <input type="number" step="0.01" id="desconto" name="desconto" value="0.00" oninput="updateSummary()">
        </div>
        <div class="form-group">
          <label for="valor_liquido">Valor Líquido:</label>
          <input type="text" id="valor_liquido" name="valor_liquido" readonly>
        </div>
        <div class="form-group">
          <label for="observacoes">Observações:</label>
          <textarea id="observacoes" name="observacoes" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-success">✅ Finalizar Venda</button>
      </form>
    </div>
  </div>

  <!-- Script permanece igual -->
  <script>
    // (mantive seu script sem alterações)
    ...
  </script>
</body>
</html>
