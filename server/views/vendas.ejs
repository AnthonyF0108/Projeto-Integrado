<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Nova Venda - Agrovale</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 0; background: #f5f6fa; display: flex; }

    /* Sidebar */
    .sidebar {
      width: 220px;
      background: #007bff;
      color: white;
      height: 100vh;
      position: fixed;
      top: 0; left: 0;
      padding-top: 1rem;
    }
    .sidebar h2 { text-align: center; margin-bottom: 2rem; }
    .sidebar a {
      display: block;
      padding: 0.8rem 1rem;
      color: white;
      text-decoration: none;
      font-weight: bold;
    }
    .sidebar a:hover { background: #0056b3; }

    /* Conte√∫do */
    .content { margin-left: 220px; padding: 2rem; width: calc(100% - 220px); }
    h1 { margin-bottom: 1rem; }

    /* Formul√°rio */
    .venda-form {
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      max-width: 900px;
      margin: auto;
    }
    .form-group { margin-bottom: 1rem; }
    label { display: block; margin-bottom: 0.5rem; font-weight: bold; }
    input, select, textarea {
      width: 100%; padding: 0.75rem; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;
    }

    /* Bot√µes */
    .btn { padding: 8px 14px; border-radius: 5px; cursor: pointer; border: none; font-size: 1rem; }
    .btn-success { background: #28a745; color: white; }
    .btn-success:hover { background: #218838; }
    .btn-secondary { background: #6c757d; color: white; }
    .btn-secondary:hover { background: #5a6268; }
    .btn-remove { background: #dc3545; color: white; }
    .btn-remove:hover { background: #c82333; }

    /* Itens */
    .item-row {
      display: flex;
      gap: 10px;
      align-items: flex-end;
      margin-top: 10px;
    }
    .item-row .form-group { flex-grow: 1; }

    /* Cabe√ßalho alinhado com as caixas */
    .item-header {
      display: flex;
      gap: 10px;
      font-weight: bold;
      margin-bottom: 5px;
    }

    /* Empurra os textos do cabe√ßalho levemente para a direita
      p/ ficarem exatamente acima das caixas */
    .item-header > div { padding-left: 6px; }

    /* Mesmas larguras das colunas dos inputs */
    .item-header > div:first-child { flex: 1; }     /* Produto */
    .item-header > div:nth-child(2) { width: 100px; }  /* Qtd */
    .item-header > div:nth-child(3) { width: 120px; }  /* Unit√°rio */
    .item-header > div:nth-child(4) { width: 120px; }  /* Total */
    .item-header > div:nth-child(5) { width: 90px; }   /* Bot√£o */

    /* Mant√©m o bot√£o com largura fixa para n√£o ‚Äúempurrar‚Äù as colunas */
    .item-row .btn-remove { width: 90px; }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <h2>Agrovale</h2>
    <a href="/dashboard">üè† In√≠cio</a>
    <a href="/produtos">üì¶ Consulta de Produto</a>
    <a href="/vendas">üí∞ Vendas</a>
    <a href="/estatisticas">üìä Estat√≠sticas</a>
    <a href="/clientes">üë§ Clientes</a>
    <a href="/logout">üö™ Sair</a>
  </div>

  <!-- Conte√∫do -->
  <div class="content">
    <h1>Nova Venda</h1>
    <div class="venda-form">
      <form action="/vendas/criar" method="POST">
        
        <!-- Cliente -->
        <div class="form-group">
          <label for="cliente">Cliente:</label>
          <select id="cliente" name="clienteId" required>
            <option value="">Selecione um cliente</option>
            <% clientes.forEach(cliente => { %>
              <option value="<%= cliente.ClienteID %>"><%= cliente.Nome %> (<%= cliente.CPF_CNPJ || 'N/A' %>)</option>
            <% }); %>
          </select>
        </div>

        <!-- Forma de Pagamento -->
        <div class="form-group">
          <label for="forma_pagamento">Forma de Pagamento:</label>
          <select id="forma_pagamento" name="formaPagamentoId" required>
            <option value="">Selecione a forma de pagamento</option>
            <% formasPagamento.forEach(fp => { %>
              <option value="<%= fp.PagamentoID %>"><%= fp.Nome %></option>
            <% }); %>
          </select>
        </div>

        <!-- Itens -->
        <h3>Itens da Venda</h3>
        <div class="item-header">
          <div>Produto</div>
          <div>Qtd</div>
          <div>Unit√°rio</div>
          <div>Total</div>
          <div></div>
        </div>
        <div id="itens-container">
          <div class="item-row">
            <div class="form-group">
              <select name="produtos[]" class="produto-select" onchange="updateFields(this, 0)" required>
                <option value="">Selecione um produto</option>
                <% produtos.forEach(produto => { %>
                  <option value="<%= produto.ProdutoID %>" data-preco="<%= parseFloat(produto.PrecoVenda) %>" data-unidade="<%= produto.UnidadeMedida %>">
                    <%= produto.Nome %> (R$ <%= parseFloat(produto.PrecoVenda).toFixed(2) %>)
                  </option>
                <% }); %>
              </select>
            </div>
            <div class="form-group" style="width: 100px;">
              <input type="number" name="quantidades[]" id="quantidade-0" step="1" value="1" oninput="updateTotal(0)" required>
            </div>
            <div class="form-group" style="width: 120px;">
              <input type="text" name="valores_unitarios[]" id="valor-unitario-0" readonly>
            </div>
            <div class="form-group" style="width: 120px;">
              <input type="text" name="valores_totais[]" id="valor-total-0" readonly>
            </div>
            <button type="button" class="btn btn-remove" onclick="removeItem(this)">Remover</button>
          </div>
        </div>
        <button type="button" class="btn btn-secondary" id="add-item">Adicionar Item</button>

        <!-- Resumo -->
        <h3 style="margin-top: 20px;">Resumo da Venda</h3>
        <div class="form-group">
          <label for="valor_bruto">Valor Bruto:</label>
          <input type="text" id="valor_bruto" name="valor_bruto" readonly>
        </div>
        <div class="form-group">
          <label for="desconto">Desconto (%):</label>
          <input type="number" step="0.01" id="desconto" name="desconto" value="0.00" oninput="updateSummary()">
        </div>
        <div class="form-group">
          <label for="valor_liquido">Valor L√≠quido:</label>
          <input type="text" id="valor_liquido" name="valor_liquido" readonly>
        </div>
        <div class="form-group">
          <label for="observacoes">Observa√ß√µes:</label>
          <textarea id="observacoes" name="observacoes" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-success">‚úÖ Finalizar Venda</button>
      </form>
    </div>
  </div>

 <script>
    let itemCounter = 1;

    function updateFields(select, index) {
      const selectedOption = select.options[select.selectedIndex];
      const preco = parseFloat(selectedOption?.dataset?.preco);
      const unidade = selectedOption?.dataset?.unidade;
      const valorUnitarioInput = document.getElementById(`valor-unitario-${index}`);
      const quantidadeInput = document.getElementById(`quantidade-${index}`);

      if (!isNaN(preco)) {
        valorUnitarioInput.value = preco.toFixed(2);
        quantidadeInput.step = (unidade === 'un' || unidade === 'pc') ? 1 : 0.01;
        updateTotal(index);
      } else {
        valorUnitarioInput.value = '';
        document.getElementById(`valor-total-${index}`).value = '';
        updateSummary();
      }
    }

    function updateTotal(index) {
      const quantidade = parseFloat(document.getElementById(`quantidade-${index}`).value);
      const valorUnitario = parseFloat(document.getElementById(`valor-unitario-${index}`).value);
      const valorTotal = document.getElementById(`valor-total-${index}`);

      if (!isNaN(quantidade) && !isNaN(valorUnitario)) {
        valorTotal.value = (quantidade * valorUnitario).toFixed(2);
      } else {
        valorTotal.value = '0.00';
      }
      updateSummary();
    }

    function updateSummary() {
      const itemTotals = document.querySelectorAll('input[name="valores_totais[]"]');
      let valorBruto = 0;
      itemTotals.forEach(input => {
        const total = parseFloat(input.value);
        if (!isNaN(total)) valorBruto += total;
      });

      const descontoPerc = parseFloat(document.getElementById('desconto').value) || 0;
      const valorLiquido = valorBruto * (1 - descontoPerc / 100);

      document.getElementById('valor_bruto').value = valorBruto.toFixed(2);
      document.getElementById('valor_liquido').value = valorLiquido.toFixed(2);
    }

    function addItem() {
      const index = itemCounter++;
      const container = document.getElementById('itens-container');

      const row = document.createElement('div');
      row.classList.add('item-row');

      row.innerHTML = `
        <div class="form-group">
          <select name="produtos[]" class="produto-select" required>
            <option value="">Selecione um produto</option>
            <% produtos.forEach(produto => { %>
              <option value="<%= produto.ProdutoID %>" 
                      data-preco="<%= parseFloat(produto.PrecoVenda) %>" 
                      data-unidade="<%= produto.UnidadeMedida %>">
                <%= produto.Nome %> (R$ <%= parseFloat(produto.PrecoVenda).toFixed(2) %>)
              </option>
            <% }); %>
          </select>
        </div>
        <div class="form-group" style="width: 100px;">
          <input type="number" name="quantidades[]" id="quantidade-${index}" value="1" required>
        </div>
        <div class="form-group" style="width: 120px;">
          <input type="text" name="valores_unitarios[]" id="valor-unitario-${index}" readonly>
        </div>
        <div class="form-group" style="width: 120px;">
          <input type="text" name="valores_totais[]" id="valor-total-${index}" readonly>
        </div>
        <button type="button" class="btn btn-remove">Remover</button>
      `;

      // adicionar listeners
      const select = row.querySelector('.produto-select');
      const qty = row.querySelector(`#quantidade-${index}`);
      const btnRemove = row.querySelector('.btn-remove');

      select.addEventListener('change', () => updateFields(select, index));
      qty.addEventListener('input', () => updateTotal(index));
      btnRemove.addEventListener('click', () => { row.remove(); updateSummary(); });

      container.appendChild(row);
    }

    document.addEventListener('DOMContentLoaded', () => {
      // primeira linha
      const firstSelect = document.querySelector('.produto-select');
      const firstQty = document.querySelector('#quantidade-0');
      const firstRemove = document.querySelector('.item-row .btn-remove');

      if (firstSelect) firstSelect.addEventListener('change', () => updateFields(firstSelect, 0));
      if (firstQty) firstQty.addEventListener('input', () => updateTotal(0));
      if (firstRemove) firstRemove.addEventListener('click', (e) => { e.target.closest('.item-row').remove(); updateSummary(); });

      // bot√£o adicionar
      document.getElementById('add-item').addEventListener('click', addItem);

      // desconto
      document.getElementById('desconto').addEventListener('input', updateSummary);
    });
  </script>
</body>
</html>